<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.project4.controllers.OrderDetailsController">
   <Label text="Orders Placed" textFill="#971313">
      <font>
         <Font size="22.0" />
      </font>
   </Label>
    <ListView fx:id="ordersListView" prefHeight="200.0" prefWidth="300.0" />
    <Label text="Total Amount:" />
   <TextField alignment="TOP_RIGHT" promptText="Total Order Cost" />
    <Label fx:id="totalAmountLabel" />
    <Button fx:id="cancelOrderButton" onAction="#handleCancelOrder" text="Cancel Order" />
    <Button fx:id="exportOrdersButton" onAction="#handleExportOrders" text="Export Orders" />
</VBox>
